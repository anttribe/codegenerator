<?xml version="1.0" encoding="UTF-8"?>
<projects>
	<project name="openeshop" description="开放微电商" basePackage="org.anttribe.openeshop"
		encoding="UTF-8" templateDirectory="templates/openeshop"
		outputDirectory="D:\Downloads\codegenerator\output" tablePrefix="t_"
		tableSuffix="">

		<!-- 版权信息 -->
		<copyright>
			<author>zhaoyong</author>
			<author-email>anshenglimin@163.com</author-email>
			<description>
			    <![CDATA[Copyright (c) (Anttribe)openeshop v1.0. All rights reserved.]]>
			</description>
			<version>1.0</version>
		</copyright>

		<!-- 数据库配置 -->
		<dbConfig>
			<dialect>MYSQL</dialect>
			<driverClass>com.mysql.jdbc.Driver</driverClass>
			<url>jdbc:mysql://localhost:3306/openeshop?useUnicode=true&amp;characterEncoding=UTF-8
			</url>
			<username>root</username>
			<password></password>
		</dbConfig>

		<!-- 模板映射 -->
		<template-mappings>
			<mapping template="Model.ftl" output="${MODELNAME}.java"
				package="domain"></mapping>
			<mapping template="mapper.ftl" output="${MODELNAME}-mapper.xml"
				package="domain"></mapping>
			<mapping template="Application.ftl" output="${MODELNAME}Application.java"
				package="application"></mapping>
		</template-mappings>

		<!-- 表映射 -->
		<table-mappings>
			<mapping table="t_distribution_info" module="core"></mapping>
			<mapping table="t_payment_info" module="core"></mapping>

			<mapping table="t_shop_category_info" module="shop"></mapping>
			<mapping table="t_shop_info" module="shop"></mapping>
			<mapping table="t_shop_distribution_info" module="shop"></mapping>
			<mapping table="t_shop_payment_info" module="shop"></mapping>

			<mapping table="t_product_spu_info" module="product"></mapping>
			<mapping table="t_product_sku_info" module="product"></mapping>
			<mapping table="t_product_picture_info" module="product"></mapping>
			<mapping table="t_shop_product_category_info" module="product"></mapping>
			<mapping table="t_product_category_associ_rec" module="product"></mapping>
			<mapping table="t_product_appraise_rec" module="product"></mapping>
			<mapping table="t_product_appraise_file_rec" module="product"></mapping>

			<mapping table="t_product_order_rec" module="order"></mapping>
			<mapping table="t_product_order_operate_rec" module="order"></mapping>
			<mapping table="t_product_order_product_rec" module="order"></mapping>

		</table-mappings>
	</project>
</projects>